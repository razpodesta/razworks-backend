  "scripts": {
    "//--- 0. LIFECYCLE & HYGIENE ---//": "Mantenimiento del workspace y limpieza",
    "prepare": "husky install",
    "clean": "pnpm nx reset && rimraf dist tmp",
    "graph": "nx graph",
    "doctor": "node scripts/doctor-config.mjs",
    "//--- 1. DIAGNOSTICS & AUDITS ---//": "Verificación de salud de infraestructura",
    "audit:infra": "node scripts/supabase/test-connection.mjs && node scripts/upstash/test-connection.mjs && node scripts/google-ai/test-connection.mjs",
    "audit:all": "node scripts/audit-full-stack.mjs",
    "//--- 2. DEVELOPMENT (LOCAL) ---//": "Entornos de desarrollo con pre-chequeos",
    "prebuild:web": "node apps/web-admin/scripts/prebuild.mjs",
    "prebuild:api": "node apps/api/scripts/prebuild.mjs",
    "dev": "nx run-many -t serve --all --parallel=3",
    "dev:api": "pnpm run prebuild:api && nx serve api",
    "dev:web": "pnpm run prebuild:web && nx serve web-admin",
    "dev:all": "pnpm run dev",
    "//--- 3. BUILD & COMPILE ---//": "Construcción de artefactos de producción",
    "build": "nx run-many -t build --all",
    "build:api": "pnpm run prebuild:api && nx build api --configuration=production",
    "build:web": "pnpm run prebuild:web && nx build web-admin --configuration=production",
    "build:libs": "nx run-many -t build --projects=tag:type:lib,tag:type:util,tag:type:domain",
    "build:affected": "nx affected -t build",
    "//--- 4. QUALITY ASSURANCE (QA) ---//": "Estrategia de Linting, Formateo y Testing",
    "lint": "nx run-many -t lint --all",
    "lint:fix": "nx run-many -t lint --all --fix",
    "lint:apps": "nx run-many -t lint --projects=tag:type:app",
    "lint:libs": "nx run-many -t lint --projects=tag:type:lib",
    "typecheck": "nx run-many -t typecheck --all",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "test": "nx run-many -t test --all",
    "test:unit": "nx run-many -t test --projects=tag:scope:core,tag:scope:shared,tag:scope:whatsapp",
    "test:e2e": "nx run-many -t e2e",
    "test:affected": "nx affected -t test",
    "//--- 5. DATABASE OPERATIONS (DRIZZLE) ---//": "Gestión de esquemas y migraciones",
    "db:check": "pnpm dlx drizzle-kit check --config=libs/database/drizzle.config.ts",
    "db:generate": "pnpm dlx drizzle-kit generate --config=libs/database/drizzle.config.ts",
    "db:migrate": "pnpm dlx drizzle-kit migrate --config=libs/database/drizzle.config.ts",
    "db:push": "pnpm dlx drizzle-kit push --config=libs/database/drizzle.config.ts",
    "db:pull": "pnpm dlx drizzle-kit introspect --config=libs/database/drizzle.config.ts",
    "db:studio": "pnpm dlx drizzle-kit studio --config=libs/database/drizzle.config.ts",
    "//--- 6. DEPLOYMENT HOOKS (PLATFORM) ---//": "Hooks específicos para Vercel/Render",
    "vercel-build": "pnpm run build:web",
    "render-build": "pnpm run build:api"
  },

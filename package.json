  "scripts": {
    "//--- DEPLOYMENT COMMANDS (CRITICAL) ---//": "",
    "vercel-build": "pnpm run build:client",
    "render-build": "pnpm run build:api",
    "//--- PRE-REQUISITOS & ASSETS ---//": "",
    "generate:assets": "concurrently \"node ./scripts/generate-gamification-manifest.mjs\" \"node ./scripts/generate-tech-manifest.mjs\"",
    "prebuild:client": "pnpm run generate:assets && node ./scripts/prebuild-razworks-client.mjs",
    "prebuild:api": "node ./scripts/prebuild-razworks-api.mjs",
    "//--- BUILD INTELIGENTE (GRAPH-BASED) ---//": "",
    "build:client": "pnpm run prebuild:client && nx build web-client --configuration=production",
    "build:api": "pnpm run prebuild:api && nx build api --configuration=production",
    "//--- SERVIDORES ---//": "",
    "start:client": "nx start web-client",
    "start:api": "node dist/apps/api/main.js",
    "//--- DESARROLLO (LOCAL CLOUD-NATIVE) ---//": "",
    "dev": "pnpm run generate:assets && nx run-many -t serve",
    "dev:web": "pnpm run prebuild:client && nx serve web-client",
    "dev:api": "pnpm run prebuild:api && nx serve api",
    "//--- MANTENIMIENTO & CALIDAD ---//": "",
    "lint": "nx run-many --target=lint",
    "test": "nx run-many --target=test",
    "test:e2e": "nx e2e web-client",
    "graph": "nx graph",
    "clean": "nx reset",
    "doctor": "node scripts/doctor-config.mjs"
  },

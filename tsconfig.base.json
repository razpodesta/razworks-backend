{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@razworks/core": ["libs/core/src/index.ts"],
      "@razworks/dtos": ["libs/shared/dtos/src/index.ts"],
      "@razworks/ai": ["libs/ai-system/src/index.ts"],
      "@razworks/database": ["libs/database/src/index.ts"],
      "@razworks/notifications": ["libs/notifications/src/index.ts"],
      "@razworks/testing": ["libs/testing/src/index.ts"],
      "@razworks/logging": ["libs/logging/src/index.ts"],
      "@razworks/whatsapp-engine": ["libs/whatsapp-engine/src/index.ts"],
      "@razworks/shared-utils": ["libs/shared/utils/src/index.ts"],
      "@razworks/security": ["libs/security/src/index.ts"],
      "@razworks/toolbox-shared": ["libs/toolbox/shared/src/index.ts"],
      "@razworks/toolbox-client": ["libs/toolbox/client/src/index.ts"],
      "@razworks/toolbox-razter": ["libs/toolbox/razter/src/index.ts"],
      "@razworks/gamification": ["libs/gamification-engine/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
